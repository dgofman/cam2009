<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml"
		xmlns:details="com.academy.calder.view.admin.student.details.*"
		title="Student Details"
		cornerRadius="10"
		headerHeight="26"
		height="100%"
		width="100%" initialize="onInitialize()">

	<mx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			private function onInitialize():void{
				detailTabs.selectedChild.dispatchEvent(new FlexEvent(FlexEvent.SHOW));
			}
		 ]]>
	</mx:Script>
	
	<mx:TabNavigator id="detailTabs" borderStyle="solid" creationPolicy="all"
		paddingTop="0" paddingBottom="0" width="100%" height="100%" enabled="false">
		<details:Registration width="100%" height="100%" label="Registration"/>
		<details:Payments width="100%" height="100%" label="Payments"/>
		<details:Lessons width="100%" height="100%" label="Lessons"/>
		<details:LessonControl width="100%" height="100%" label="Lesson Control"/>
	</mx:TabNavigator>
</mx:Panel>